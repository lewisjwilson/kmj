<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Turquoise" parent="AppTheme">
        <item name="colorPrimary">@color/celeste</item>
        <item name="colorPrimaryDark">@color/med_turquoise</item>
        <item name="colorAccent">@color/teal</item>
        <item name="titleTextColor">@color/teal</item>
    </style>

    <style name="Nature" parent="AppTheme">
        <item name="colorPrimary">@color/magic_mint</item>
        <item name="colorPrimaryDark">@color/granny_smith</item>
        <item name="colorAccent">@color/mid_green</item>
        <item name="titleTextColor">@color/mid_green</item>
    </style>

    <style name="HelpScreenTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">200dp</item>
        <item name="android:layout_marginTop">200dp</item>
    </style>
</resources>